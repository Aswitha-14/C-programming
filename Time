#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int h,m,s,exthr,extmin;
    scanf("%d\n%d\n%d",&h,&m,&s);
    extmin=s/60;
    s=s%60;
    m=m+extmin;
    exthr=m/60;
    m=m%60;
    h=h+exthr;
    printf("Total Number of hours is %d",h);
    printf("\nTotal Number of minutes is %d",m);
    printf("\nTotal Number of seconds is %d",s);
    return 0;
}
