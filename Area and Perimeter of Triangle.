#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   int a,b,c,d,e;
    float h,g;
    scanf("%d",&a);
    scanf("%d",&b);
    scanf("%d",&c);
    scanf("%d",&d);
    scanf("%d",&e);
    g=(float)a*b;
    h=(float)c+d+e;
    printf("Area of Triangle is %.2f",g/2);
    printf("\nPerimeter of Triangle is %.2f",h);
    return 0;
}
